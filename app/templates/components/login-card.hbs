{{#x-card
  onsubmit=attrs.onsubmit
  title='Log in to Peepchat'
  buttonText='Login'
  buttonDisabled=validations.messages.length}}

  <div class="row">
    {{x-input
    value=model.email
    errors=(v-get this 'email' 'messages')
    classNames='col s12'
    type='email'
    label='Username'}}
  </div>
  <div class="row">
    {{x-input
    value=model.password
    errors=(v-get this 'password' 'messages')
    classNames='col s12'
    type='password'
    label='Password'}}
  </div>
{{/x-card}}
